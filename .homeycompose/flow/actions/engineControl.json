{
    "id": "engineControl",
    "title": {
        "en": "Engine, remote start"
    },
    "titleFormatted": {
        "en": "[[engineAction]] the engine for [[engineDuration]]"
    },
    "args": [
        {
            "name": "device",
            "type": "device",
            "filter": "driver_id=voc"
        },
        {
            "name": "engineAction",
            "type": "dropdown",
            "title": {
                "en": "Engine action"
            },
            "values": [
                {
                    "id": "START",
                    "label": {
                        "en": "Start"
                    }
                },
                {
                    "id": "STOP",
                    "label": {
                        "en": "Stop"
                    }
                }
            ]
        },
        {
            "name": "engineDuration",
            "type": "range",
            "title": {
                "en": "Duration"
            },
            "min": 1,
            "max": 15,
            "step": 1,
            "label": " minutes",
            "labelDecimals": 0
        }
    ]
}